{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pedidos list</h1>

    <table>
        <thead>
            <tr>
                <th>Pedido</th>
                <th>Folio</th>
                <th>Cliente</th>
                <th>Cuenta</th>
                <th>Fecha</th>
                <th>Devolucion</th>
