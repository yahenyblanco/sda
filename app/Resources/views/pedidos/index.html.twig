                <td>{{ pedido.fecha }}</td>
                <td>{{ pedido.devolucion }}</td>
                <td>{{ pedido.statusPedido }}</td>
                <td>{{ pedido.cant }}</td>
                <td>{{ pedido.clave }}</td>
                <td>{{ pedido.equipo }}</td>
                <td>{{ pedido.dias }}</td>
                <td>{{ pedido.pu }}</td>
                <td>{{ pedido.importe }}</td>
                <td>{{ pedido.direccionEntrega }}</td>
                <td>{{ pedido.comentarios }}</td>
                <td>{{ pedido.descuento }}</td>
                <td>{{ pedido.impuesto }}</td>
                <td>{{ pedido.total }}</td>
                <td>{{ pedido.statusPago }}</td>
                <td>{{ pedido.subtotal }}</td>
                <td>{{ pedido.subtotal2 }}</td>
                <td>{{ pedido.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pedidos_show', { 'id': pedido.id }) }}">show</a>
                        </li>
                    </ul>
